<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:background="@drawable/shape_rounded_image">

        <ImageView
            android:id="@+id/flower_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/shape_rounded_image"
            android:backgroundTint="@color/gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/flower_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:background="@drawable/shape_rounded_image"
            android:backgroundTint="@color/gray"
            android:textColor="@color/default_item_color"
            app:layout_constraintEnd_toEndOf="@id/flower_image"
            app:layout_constraintStart_toStartOf="@id/flower_image"
            app:layout_constraintTop_toBottomOf="@id/flower_image"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>