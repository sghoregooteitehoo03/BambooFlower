<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="java.util.List"/>

        <import type="android.view.View"/>

        <variable
            name="viewmodel"
            type="com.sg.android.bambooflower.viewmodel.reportDialog.ReportViewModel"/>

        <variable
            name="reportReason"
            type="List&lt;String>"/>

        <variable
            name="clickListener"
            type="View.OnClickListener"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="게시글 신고"
            android:textColor="@color/default_item_color"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageButton
            android:id="@+id/close_btn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@null"
            android:enabled="@{!viewmodel.isLoading()}"
            android:onClick="@{clickListener}"
            android:src="@drawable/ic_close"
            app:layout_constraintBottom_toBottomOf="@id/title_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/title_text"/>

        <RadioGroup
            android:id="@+id/report_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/title_text">

            <RadioButton
                android:id="@+id/report_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:text="@{reportReason[0]}"
                android:textSize="16sp"
                tools:text="퀘스트 인증과는 관련 없는 게시글"/>

            <RadioButton
                android:id="@+id/report_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:text="@{reportReason[1]}"
                android:textSize="16sp"
                tools:text="제시된 인증 방법과는 다르게 인증한 게시글"/>

            <RadioButton
                android:id="@+id/report_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:text="@{reportReason[2]}"
                android:textSize="16sp"
                tools:text="이전에 인증하였던 사진을 다시 사용한 게시글"/>

            <RadioButton
                android:id="@+id/report_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:text="@{reportReason[3]}"
                android:textSize="16sp"
                tools:text="불편함을 유발하는 게시글"/>

            <RadioButton
                android:id="@+id/report_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:text="@{reportReason[4]}"
                android:textSize="16sp"
                tools:text="부적절한 이미지 및 내용이 있는 게시글"/>

            <RadioButton
                android:id="@+id/report_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:text="@{reportReason[5]}"
                android:textSize="16sp"
                tools:text="홍보성 게시글"/>
        </RadioGroup>

        <Button
            android:id="@+id/report_button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:backgroundTint="@color/green_300"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:onClick="@{clickListener}"
            android:text="신고하기"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/report_group"
            app:setButtonEnable="@{viewmodel.pos != -1}"
            app:setButtonLoading="@{viewmodel.isLoading()}"/>

        <ProgressBar
            android:id="@+id/loading_view"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:indeterminateTint="@color/white"
            android:visibility="@{viewmodel.isLoading() ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="@id/report_button"
            app:layout_constraintEnd_toEndOf="@id/report_button"
            app:layout_constraintStart_toStartOf="@id/report_button"
            app:layout_constraintTop_toTopOf="@id/report_button"
            tools:visibility="gone"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

