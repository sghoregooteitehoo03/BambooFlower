<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View"/>

        <variable
            name="nativeAd"
            type="com.google.android.gms.ads.nativead.NativeAd"/>
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="6dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.gms.ads.nativead.NativeAdView
            android:id="@+id/ad_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:setNativeAd="@{nativeAd}">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/divide_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <View
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:background="@drawable/shape_round"
                        android:backgroundTint="@color/gray_night_color"/>

                    <View
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/shape_round"
                        android:backgroundTint="@color/gray_night_color"/>

                    <View
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/shape_round"
                        android:backgroundTint="@color/gray_night_color"/>
                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="12dp"
                    android:padding="10dp"
                    android:visibility="@{nativeAd != null ? View.VISIBLE : View.INVISIBLE}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/divide_view"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/ad_image"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:setUriImage="@{nativeAd.icon.uri}"
                        tools:src="@drawable/test_image"/>

                    <TextView
                        android:id="@+id/ad_headline"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:ellipsize="end"
                        android:text="@{nativeAd.headline}"
                        android:textColor="@color/default_item_color"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@id/guideline_divide"
                        app:layout_constraintEnd_toStartOf="@id/ad_title"
                        app:layout_constraintStart_toEndOf="@id/ad_image"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="Ad Title"/>

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline_divide"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_percent="0.37"/>

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline_end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.78"/>

                    <TextView
                        android:id="@+id/ad_body"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginEnd="4dp"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="@{nativeAd.body}"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/guideline_end"
                        app:layout_constraintStart_toEndOf="@id/ad_image"
                        app:layout_constraintTop_toBottomOf="@id/guideline_divide"
                        tools:text="Ad Contents…"/>

                    <TextView
                        android:id="@+id/ad_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_round_button"
                        android:backgroundTint="@color/yellow"
                        android:gravity="center"
                        android:paddingStart="8dp"
                        android:paddingTop="2dp"
                        android:paddingEnd="8dp"
                        android:paddingBottom="2dp"
                        android:text="Ad"
                        android:textColor="@color/white"
                        app:layout_constraintBottom_toTopOf="@id/guideline_divide"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <Button
                        android:id="@+id/ad_btn"
                        android:layout_width="0dp"
                        android:layout_height="28dp"
                        android:layout_marginTop="12dp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:text="@{nativeAd.callToAction}"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        app:cornerRadius="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/guideline_end"
                        app:layout_constraintTop_toBottomOf="@id/guideline_divide"
                        tools:text="더보기"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.gms.ads.nativead.NativeAdView>
    </androidx.cardview.widget.CardView>
</layout>