<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewmodel"
            type="com.sg.android.bambooflower.viewmodel.emailLoginFragment.EmailLoginViewModel"/>

        <variable
            name="clickListener"
            type="android.view.View.OnClickListener"/>

        <variable
            name="blank"
            type="String"/>
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingTop="24dp"
            android:paddingEnd="16dp">

            <TextView
                android:id="@+id/title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="로그인"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.31"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_id_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundColor="@color/white"
                app:endIconMode="clear_text"
                app:hintEnabled="false"
                app:layout_constraintTop_toBottomOf="@id/guideline_top">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="이메일 입력"
                    android:inputType="textEmailAddress"
                    android:text="@={viewmodel.email}"
                    app:hideKeyboard="@{viewmodel.hideKeyboard}"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/error_email_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="2dp"
                android:text="@{viewmodel.errorEmailMsg}"
                android:textColor="@android:color/holo_red_light"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/input_id_layout"
                tools:text="이메일 형식이 아닙니다."/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_password_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:boxBackgroundColor="@color/white"
                app:hintEnabled="false"
                app:layout_constraintTop_toBottomOf="@id/input_id_layout"
                app:passwordToggleEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="비밀번호 입력"
                    android:inputType="textPassword"
                    android:text="@={viewmodel.password}"
                    app:hideKeyboard="@{viewmodel.hideKeyboard}"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/error_password_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="2dp"
                android:text="@{viewmodel.errorPasswordMsg}"
                android:textColor="@android:color/holo_red_light"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/input_password_layout"/>

            <Button
                android:id="@+id/login_btn"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginTop="48dp"
                android:enabled="@{!viewmodel.email.equals(blank) &amp;&amp; !viewmodel.password.equals(blank)}"
                android:onClick="@{clickListener}"
                android:text="로그인"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:cornerRadius="8dp"
                app:layout_constraintTop_toBottomOf="@id/input_password_layout"/>

            <TextView
                android:id="@+id/reset_password_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="?attr/selectableItemBackground"
                android:text="비밀번호 재설정"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/login_btn"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>