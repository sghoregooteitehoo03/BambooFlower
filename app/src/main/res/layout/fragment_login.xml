<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewmodel"
            type="com.sg.android.bambooflower.viewmodel.loginFragment.LoginViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:src="@drawable/app_name"
            app:layout_constraintBottom_toTopOf="@id/guideline_center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.38"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@id/explain_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/guideline_center">

            <com.sg.android.bambooflower.ui.view.CustomLoginButton
                android:id="@+id/google_login_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/shape_round_button_border"
                android:onClick="@{() -> viewmodel.loginGoogle()}"
                app:buttonIcon="@drawable/google_logo"
                app:buttonText="구글 로그인"
                app:buttonTextColor="@color/default_item_color"/>

            <com.sg.android.bambooflower.ui.view.CustomLoginButton
                android:id="@+id/facebook_login_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/shape_round_button"
                android:backgroundTint="@color/com_facebook_blue"
                android:onClick="@{() -> viewmodel.loginFacebook()}"
                app:buttonIcon="@drawable/facebook_logo"
                app:buttonText="페이스북 로그인"
                app:buttonTextColor="@color/white"/>

            <com.sg.android.bambooflower.ui.view.CustomLoginButton
                android:id="@+id/email_login_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/shape_round_button"
                android:backgroundTint="@color/green_300"
                android:onClick="@{() -> viewmodel.loginEmail()}"
                app:buttonIcon="@drawable/ic_email"
                app:buttonText="이메일로 로그인"
                app:buttonTextColor="@color/white"/>
        </LinearLayout>

        <TextView
            android:id="@+id/explain_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="대충 이용약관 및 개인정보 보호법"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="대충 이용약관 및 개인정보 보호법"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>