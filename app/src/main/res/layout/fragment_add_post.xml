<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View"/>

        <variable
            name="viewmodel"
            type="com.sg.android.bambooflower.viewmodel.addPostFragment.AddPostViewModel"/>

        <variable
            name="clickListener"
            type="View.OnClickListener"/>

        <variable
            name="blank"
            type="String"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="12dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/get_image_layout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@drawable/shape_rounded_image"
                    android:backgroundTint="@color/gray"
                    android:gravity="center"
                    android:onClick="@{clickListener}"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toTopOf="@id/guideline_divide"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:src="@drawable/ic_add"
                        android:visibility="@{viewmodel.image != null ? View.GONE : View.VISIBLE}"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:text="클릭하여 이미지를 추가해주세요."
                        android:textColor="@android:color/tab_indicator_text"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:visibility="@{viewmodel.image != null ? View.GONE : View.VISIBLE}"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:background="@drawable/shape_rounded_image"
                        android:scaleType="centerCrop"
                        android:visibility="@{viewmodel.image != null ? View.VISIBLE : View.GONE}"
                        app:setUriImage="@{viewmodel.image}"
                        tools:visibility="gone"/>
                </LinearLayout>

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_divide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.845"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input_content_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:boxBackgroundColor="@color/default_background_color"
                    app:hintEnabled="false"
                    app:layout_constraintTop_toBottomOf="@id/get_image_layout">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="짥게 내용을 입력해주세요."
                        android:inputType="textEmailAddress"
                        android:maxLength="20"
                        android:maxLines="1"
                        android:text="@={viewmodel.content}"/>
                </com.google.android.material.textfield.TextInputLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <Button
            android:id="@+id/add_post_btn"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:enabled="@{!viewmodel.content.equals(blank) &amp;&amp; viewmodel.image != null}"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:onClick="@{clickListener}"
            android:text="게시하기"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>