<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="mission"
            type="com.sg.android.bambooflower.data.Mission"/>

        <variable
            name="user"
            type="com.sg.android.bambooflower.data.User"/>
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="110dp"
        android:layout_height="140dp"
        android:layout_margin="4dp"
        app:cardBackgroundColor="@color/diary_color"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:setSelectMission="@{mission.isSelected}">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="12dp"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:setMissionCompleteLayout="@{mission}"
                app:setMissionTodayLayout="@{user}"
                tools:background="@color/green_300">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:setMissionCompleteText="@{mission}"
                    app:setMissionTodayText="@{user}"
                    tools:text="인증 완료"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="12dp"
                android:textColor="@color/default_item_color"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:setTitle="@{mission.missionTitle}"
                tools:text="[오늘은 내가 요리사!]"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>