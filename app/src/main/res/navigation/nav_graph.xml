<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.sg.android.bambooflower.ui.fragment.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_loginFragment_to_emailLoginFragment"
            app:destination="@id/emailLoginFragment" />
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.sg.android.bambooflower.ui.fragment.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_postFragment"
            app:destination="@id/postFragment" />
        <action
            android:id="@+id/action_homeFragment_to_postDialog"
            app:destination="@id/postDialog" />
        <action
            android:id="@+id/action_homeFragment_to_diaryWriteFragment"
            app:destination="@id/diaryWriteFragment" />
    </fragment>
    <fragment
        android:id="@+id/emailLoginFragment"
        android:name="com.sg.android.bambooflower.ui.fragment.EmailLoginFragment"
        android:label="EmailLoginFragment"
        tools:layout="@layout/fragment_email_login">
        <action
            android:id="@+id/action_emailLoginFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_emailLoginFragment_to_createAccountFragment"
            app:destination="@id/createAccountFragment" />
    </fragment>
    <fragment
        android:id="@+id/createAccountFragment"
        android:name="com.sg.android.bambooflower.ui.fragment.CreateAccountFragment"
        android:label="CreateAccountFragment"
        tools:layout="@layout/fragment_create_account">
        <action
            android:id="@+id/action_createAccountFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/postFragment"
        android:name="com.sg.android.bambooflower.ui.fragment.PostFragment"
        android:label="PostFragment"
        tools:layout="@layout/fragment_post">
        <action
            android:id="@+id/action_postFragment_to_addPostFragment"
            app:destination="@id/addPostFragment" />
        <action
            android:id="@+id/action_postFragment_to_postDialog"
            app:destination="@id/postDialog" />
    </fragment>
    <fragment
        android:id="@+id/addPostFragment"
        android:name="com.sg.android.bambooflower.ui.fragment.AddPostFragment"
        android:label="AddPostFragment"
        tools:layout="@layout/fragment_add_post" />
    <dialog
        android:id="@+id/postDialog"
        android:name="com.sg.android.bambooflower.ui.dialog.PostDialog"
        android:label="PostDialog"
        tools:layout="@layout/dialog_post" />
    <fragment
        android:id="@+id/diaryWriteFragment"
        android:name="com.sg.android.bambooflower.ui.fragment.DiaryWriteFragment"
        android:label="DiaryWriteFragment"
        tools:layout="@layout/fragment_diary_write" />
</navigation>