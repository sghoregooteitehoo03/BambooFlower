<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.sg.android.bambooflower.ui.fragment.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_loginFragment_to_emailLoginFragment"
            app:destination="@id/emailLoginFragment" />
        <action
            android:id="@+id/action_loginFragment_to_createUserFragment"
            app:destination="@id/createUserFragment" />
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.sg.android.bambooflower.ui.fragment.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_postListFragment"
            app:destination="@id/postListFragment" />
        <action
            android:id="@+id/action_homeFragment_to_postFragment"
            app:destination="@id/postFragment" />
        <action
            android:id="@+id/action_homeFragment_to_diaryWriteFragment"
            app:destination="@id/diaryWriteFragment" />
        <action
            android:id="@+id/action_homeFragment_to_diaryViewerFragment"
            app:destination="@id/diaryViewerFragment" />
        <action
            android:id="@+id/action_homeFragment_to_calendarDialog"
            app:destination="@id/calendarDialog" />
        <action
            android:id="@+id/action_homeFragment_to_addPostFragment"
            app:destination="@id/addPostFragment" />
    </fragment>
    <fragment
        android:id="@+id/emailLoginFragment"
        android:name="com.sg.android.bambooflower.ui.fragment.EmailLoginFragment"
        android:label="EmailLoginFragment"
        tools:layout="@layout/fragment_email_login">
        <action
            android:id="@+id/action_emailLoginFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_emailLoginFragment_to_createAccountFragment"
            app:destination="@id/createAccountFragment" />
        <action
            android:id="@+id/action_emailLoginFragment_to_createUserFragment"
            app:destination="@id/createUserFragment" />
    </fragment>
    <fragment
        android:id="@+id/createAccountFragment"
        android:name="com.sg.android.bambooflower.ui.fragment.CreateAccountFragment"
        android:label="CreateAccountFragment"
        tools:layout="@layout/fragment_create_account">
        <action
            android:id="@+id/action_createAccountFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/postListFragment"
        android:name="com.sg.android.bambooflower.ui.fragment.PostListFragment"
        android:label="PostListFragment"
        tools:layout="@layout/fragment_post_list">
        <action
            android:id="@+id/action_postListFragment_to_postDialog"
            app:destination="@id/postFragment" />
    </fragment>
    <fragment
        android:id="@+id/addPostFragment"
        android:name="com.sg.android.bambooflower.ui.fragment.AddPostFragment"
        android:label="AddPostFragment"
        tools:layout="@layout/fragment_add_post" />
    <fragment
        android:id="@+id/postFragment"
        android:name="com.sg.android.bambooflower.ui.fragment.PostFragment"
        android:label="PostFragment"
        tools:layout="@layout/fragment_post">
        <action
            android:id="@+id/action_postFragment_to_reportDialog"
            app:destination="@id/reportDialog" />
    </fragment>
    <fragment
        android:id="@+id/diaryWriteFragment"
        android:name="com.sg.android.bambooflower.ui.fragment.DiaryWriteFragment"
        android:label="DiaryWriteFragment"
        tools:layout="@layout/fragment_diary_write">
        <action
            android:id="@+id/action_diaryWriteFragment_to_satisfactionFragment"
            app:destination="@id/satisfactionFragment" />
    </fragment>
    <fragment
        android:id="@+id/diaryViewerFragment"
        android:name="com.sg.android.bambooflower.ui.fragment.DiaryViewerFragment"
        android:label="DiaryViewerFragment"
        tools:layout="@layout/fragment_diary_viewer">
        <action
            android:id="@+id/action_diaryViewerFragment_to_diaryEditFragment"
            app:destination="@id/diaryEditFragment" />
    </fragment>
    <fragment
        android:id="@+id/rankingFragment"
        android:name="com.sg.android.bambooflower.ui.fragment.RankingFragment"
        android:label="RankingFragment"
        tools:layout="@layout/fragment_ranking" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.sg.android.bambooflower.ui.fragment.ProfileFragment"
        android:label="ProfileFragment"
        tools:layout="@layout/fragment_profile">
        <action
            android:id="@+id/action_profileFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_profileFragment_to_myPostListFragment"
            app:destination="@id/myPostListFragment" />
        <action
            android:id="@+id/action_profileFragment_to_myMissionFragment"
            app:destination="@id/myMissionFragment" />
        <action
            android:id="@+id/action_profileFragment_to_settingFragment"
            app:destination="@id/settingFragment" />
    </fragment>
    <fragment
        android:id="@+id/createUserFragment"
        android:name="com.sg.android.bambooflower.ui.fragment.CreateUserFragment"
        android:label="CreateUserFragment"
        tools:layout="@layout/fragment_create_account">
        <action
            android:id="@+id/action_createUserFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
        <argument
            android:name="token"
            app:argType="string" />
        <argument
            android:name="loginWay"
            app:argType="string" />
    </fragment>
    <dialog
        android:id="@+id/calendarDialog"
        android:name="com.sg.android.bambooflower.ui.dialog.CalendarDialog"
        android:label="CalendarDialog"
        tools:layout="@layout/dialog_calendar" />
    <dialog
        android:id="@+id/reportDialog"
        android:name="com.sg.android.bambooflower.ui.dialog.ReportDialog"
        android:label="ReportDialog"
        tools:layout="@layout/dialog_report" />
    <dialog
        android:id="@+id/satisfactionFragment"
        android:name="com.sg.android.bambooflower.ui.fragment.SatisfactionFragment"
        android:label="SatisfactionFragment"
        tools:layout="@layout/fragment_satisfaction" />
    <fragment
        android:id="@+id/diaryEditFragment"
        android:name="com.sg.android.bambooflower.ui.fragment.DiaryEditFragment"
        android:label="DiaryEditFragment"
        tools:layout="@layout/fragment_diary_write" />
    <fragment
        android:id="@+id/myPostListFragment"
        android:name="com.sg.android.bambooflower.ui.fragment.MyPostListFragment"
        android:label="MyPostListFragment"
        tools:layout="@layout/fragment_post_list" />
    <fragment
        android:id="@+id/myMissionFragment"
        android:name="com.sg.android.bambooflower.ui.fragment.MyMissionFragment"
        android:label="MyMissionFragment"
        tools:layout="@layout/fragment_my_mission" />
    <fragment
        android:id="@+id/settingFragment"
        android:name="com.sg.android.bambooflower.ui.fragment.SettingFragment"
        android:label="SettingFragment"
        tools:layout="@layout/fragment_setting">
        <action
            android:id="@+id/action_settingFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>