<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/signUpFragment">

    <action
        android:id="@+id/action_global_onboardFragment"
        app:destination="@id/onboardFragment"
        app:launchSingleTop="true"/>

    <action
        android:id="@+id/action_global_profileFragment"
        app:destination="@id/profileFragment"
        app:enterAnim="@anim/fade_in"
        app:exitAnim="@anim/fade_out"
        app:popEnterAnim="@anim/fade_in"
        app:popExitAnim="@anim/fade_out"/>

    <fragment
        android:id="@+id/onboardFragment"
        android:name="com.sg.android.bambooflower.ui.fragment.OnboardFragment"
        android:label="onboardFragment"
        tools:layout="@layout/fragment_onboard">

        <action
            android:id="@+id/action_onboardFragment_to_loginFragment"
            app:destination="@id/signUpFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="false"/>
    </fragment>

    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.sg.android.bambooflower.ui.fragment.SignUpFragment"
        android:label="SignOutFragment"
        tools:layout="@layout/fragment_sign_up">
        <action
            android:id="@+id/action_signUpFragment_to_missionListFragment"
            app:destination="@id/missionListFragment"/>
        <action
            android:id="@+id/action_signUpFragment_to_emailLoginFragment"
            app:destination="@id/emailLoginFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
        <action
            android:id="@+id/action_signUpFragment_to_createUserFragment"
            app:destination="@id/createUserFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
    </fragment>

    <fragment
        android:id="@+id/emailLoginFragment"
        android:name="com.sg.android.bambooflower.ui.fragment.EmailLoginFragment"
        android:label="EmailLoginFragment"
        tools:layout="@layout/fragment_email_login">
        <action
            android:id="@+id/action_emailLoginFragment_to_missionListFragment"
            app:destination="@id/missionListFragment"
            app:popUpTo="@id/signUpFragment"
            app:popUpToInclusive="false"/>
        <action
            android:id="@+id/action_emailLoginFragment_to_createUserFragment"
            app:destination="@id/createUserFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
    </fragment>
    <fragment
        android:id="@+id/postListFragment"
        android:name="com.sg.android.bambooflower.ui.fragment.PostListFragment"
        android:label="PostListFragment"
        tools:layout="@layout/fragment_post_list">
        <action
            android:id="@+id/action_postListFragment_to_acceptListDialog"
            app:destination="@id/acceptListDialog"/>
        <action
            android:id="@+id/action_postListFragment_to_reportDialog"
            app:destination="@id/reportDialog"/>
    </fragment>
    <fragment
        android:id="@+id/addPostFragment"
        android:name="com.sg.android.bambooflower.ui.fragment.AddPostFragment"
        android:label="AddPostFragment"
        tools:layout="@layout/fragment_add_post"/>
    <fragment
        android:id="@+id/diaryWriteFragment"
        android:name="com.sg.android.bambooflower.ui.fragment.DiaryWriteFragment"
        android:label="DiaryWriteFragment"
        tools:layout="@layout/fragment_diary_write"/>
    <fragment
        android:id="@+id/diaryViewerFragment"
        android:name="com.sg.android.bambooflower.ui.fragment.DiaryViewerFragment"
        android:label="DiaryViewerFragment"
        tools:layout="@layout/fragment_diary_viewer">
        <action
            android:id="@+id/action_diaryViewerFragment_to_diaryEditFragment"
            app:destination="@id/diaryEditFragment"/>
    </fragment>
    <fragment
        android:id="@+id/rankingFragment"
        android:name="com.sg.android.bambooflower.ui.fragment.RankingFragment"
        android:label="RankingFragment"
        tools:layout="@layout/fragment_ranking"/>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.sg.android.bambooflower.ui.fragment.ProfileFragment"
        android:label="ProfileFragment"
        tools:layout="@layout/fragment_profile">
        <action
            android:id="@+id/action_profileFragment_to_settingFragment"
            app:destination="@id/settingFragment"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/fade_out"/>
    </fragment>
    <fragment
        android:id="@+id/createUserFragment"
        android:name="com.sg.android.bambooflower.ui.fragment.CreateUserFragment"
        android:label="CreateUserFragment"
        tools:layout="@layout/fragment_create_user">
        <action
            android:id="@+id/action_createUserFragment_to_missionListFragment"
            app:destination="@id/missionListFragment"
            app:popUpTo="@id/signUpFragment"
            app:popUpToInclusive="false"/>
        <argument
            android:name="token"
            app:argType="string"/>
        <argument
            android:name="loginWay"
            app:argType="string"/>
        <argument
            android:name="password"
            app:argType="string"/>
        <argument
            android:name="email"
            app:argType="string"/>
    </fragment>
    <dialog
        android:id="@+id/levelUpDialog"
        android:name="com.sg.android.bambooflower.ui.dialog.LevelUpDialog"
        android:label="levelUpDialog"
        tools:layout="@layout/dialog_level_up"
        />
    <dialog
        android:id="@+id/reportDialog"
        android:name="com.sg.android.bambooflower.ui.dialog.ReportDialog"
        android:label="ReportDialog"
        tools:layout="@layout/dialog_report"/>
    <fragment
        android:id="@+id/diaryEditFragment"
        android:name="com.sg.android.bambooflower.ui.fragment.DiaryEditFragment"
        android:label="DiaryEditFragment"
        tools:layout="@layout/fragment_diary_write"/>
    <fragment
        android:id="@+id/myPostListFragment"
        android:name="com.sg.android.bambooflower.ui.fragment.MyPostListFragment"
        android:label="MyPostListFragment"
        tools:layout="@layout/fragment_post_list"/>
    <fragment
        android:id="@+id/myMissionFragment"
        android:name="com.sg.android.bambooflower.ui.fragment.MyMissionFragment"
        android:label="MyMissionFragment"
        tools:layout="@layout/fragment_my_mission"/>
    <fragment
        android:id="@+id/settingFragment"
        android:name="com.sg.android.bambooflower.ui.fragment.SettingFragment"
        android:label="SettingFragment"
        tools:layout="@layout/fragment_setting">
        <action
            android:id="@+id/action_settingFragment_to_signUpFragment"
            app:destination="@id/signUpFragment"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_right"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true"/>
    </fragment>
    <dialog
        android:id="@+id/acceptListDialog"
        android:name="com.sg.android.bambooflower.ui.dialog.AcceptListDialog"
        android:label="AcceptListDialog"
        tools:layout="@layout/dialog_accept_list"/>
    <fragment
        android:id="@+id/missionListFragment"
        android:name="com.sg.android.bambooflower.ui.fragment.MissionListFragment"
        android:label="MissionListFragment"
        tools:layout="@layout/fragment_mission_list">
        <action
            android:id="@+id/action_missionListFragment_to_levelUpDialog"
            app:destination="@id/levelUpDialog"/>
        <action
            android:id="@+id/action_missionListFragment_to_missionDialog"
            app:destination="@id/missionDialog"/>
    </fragment>
    <fragment
        android:id="@+id/diaryListFragment"
        android:name="com.sg.android.bambooflower.ui.fragment.DiaryListFragment"
        android:label="DiaryListFragment"
        tools:layout="@layout/fragment_diary_list">
        <action
            android:id="@+id/action_diaryListFragment_to_diaryWriteFragment"
            app:destination="@id/diaryWriteFragment"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/fade_out"/>
        <action
            android:id="@+id/action_diaryListFragment_to_diaryViewerFragment"
            app:destination="@id/diaryViewerFragment"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/fade_out"/>
    </fragment>
    <dialog
        android:id="@+id/missionDialog"
        android:name="com.sg.android.bambooflower.ui.dialog.MissionDialog"
        android:label="MissionDialog"
        tools:layout="@layout/dialog_mission">
        <action
            android:id="@+id/action_missionDialog_to_addPostFragment"
            app:destination="@id/addPostFragment"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/fade_out"/>
    </dialog>
</navigation>