<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/signUpFragment">

    <action
        android:id="@+id/action_global_onboardFragment"
        app:destination="@id/onboardFragment"
        app:launchSingleTop="true"/>

    <action
        android:id="@+id/action_global_profileFragment"
        app:destination="@id/profileFragment"
        app:enterAnim="@anim/fade_in"
        app:exitAnim="@anim/fade_out"
        app:popEnterAnim="@anim/fade_in"
        app:popExitAnim="@anim/fade_out"/>

    <fragment
        android:id="@+id/onboardFragment"
        android:name="com.sg.android.bambooflower.ui.fragment.OnboardFragment"
        android:label="onboardFragment"
        tools:layout="@layout/fragment_onboard">

        <action
            android:id="@+id/action_onboardFragment_to_loginFragment"
            app:destination="@id/signUpFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="false"/>
    </fragment>

    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.sg.android.bambooflower.ui.fragment.SignUpFragment"
        android:label="SignOutFragment"
        tools:layout="@layout/fragment_sign_up">
        <action
            android:id="@+id/action_signUpFragment_to_homeFragment"
            app:destination="@id/homeFragment"/>
        <action
            android:id="@+id/action_signUpFragment_to_emailLoginFragment"
            app:destination="@id/emailLoginFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
        <action
            android:id="@+id/action_signUpFragment_to_createUserFragment"
            app:destination="@id/createUserFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
    </fragment>

    <fragment
        android:id="@+id/emailLoginFragment"
        android:name="com.sg.android.bambooflower.ui.fragment.EmailLoginFragment"
        android:label="EmailLoginFragment"
        tools:layout="@layout/fragment_email_login">
        <action
            android:id="@+id/action_emailLoginFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/signUpFragment"
            app:popUpToInclusive="false"/>
        <action
            android:id="@+id/action_emailLoginFragment_to_createUserFragment"
            app:destination="@id/createUserFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
        <action
            android:id="@+id/action_emailLoginFragment_to_resetPasswordFragment"
            app:destination="@id/resetPasswordFragment"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/fade_out"/>
    </fragment>
    <fragment
        android:id="@+id/postListFragment"
        android:name="com.sg.android.bambooflower.ui.fragment.PostListFragment"
        android:label="PostListFragment"
        tools:layout="@layout/fragment_post_list">
        <action
            android:id="@+id/action_postListFragment_to_acceptListDialog"
            app:destination="@id/acceptListDialog"/>
        <action
            android:id="@+id/action_postListFragment_to_reportDialog"
            app:destination="@id/reportDialog"/>
    </fragment>
    <fragment
        android:id="@+id/addPostFragment"
        android:name="com.sg.android.bambooflower.ui.fragment.AddPostFragment"
        android:label="AddPostFragment"
        tools:layout="@layout/fragment_add_post"/>
    <fragment
        android:id="@+id/addDiaryFragment"
        android:name="com.sg.android.bambooflower.ui.fragment.AddDiaryFragment"
        android:label="AddDiaryFragment"
        tools:layout="@layout/fragment_add_diary"/>
    <fragment
        android:id="@+id/diaryFragment"
        android:name="com.sg.android.bambooflower.ui.fragment.DiaryFragment"
        android:label="DiaryViewerFragment"
        tools:layout="@layout/fragment_diary">
        <action
            android:id="@+id/action_diaryFragment_to_editDiaryFragment"
            app:destination="@id/editDiaryFragment"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/fade_out"/>
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.sg.android.bambooflower.ui.fragment.ProfileFragment"
        android:label="ProfileFragment"
        tools:layout="@layout/fragment_profile">
        <action
            android:id="@+id/action_profileFragment_to_settingFragment"
            app:destination="@id/settingFragment"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/fade_out"/>
        <action
            android:id="@+id/action_profileFragment_to_profileEditFragment"
            app:destination="@id/profileEditFragment"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/fade_out"/>
    </fragment>
    <fragment
        android:id="@+id/createUserFragment"
        android:name="com.sg.android.bambooflower.ui.fragment.CreateUserFragment"
        android:label="CreateUserFragment"
        tools:layout="@layout/fragment_create_user">
        <action
            android:id="@+id/action_createUserFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/signUpFragment"
            app:popUpToInclusive="false"/>
        <argument
            android:name="token"
            app:argType="string"/>
        <argument
            android:name="email"
            app:argType="string"/>
        <argument
            android:name="loginWay"
            app:argType="string"/>
    </fragment>
    <dialog
        android:id="@+id/reportDialog"
        android:name="com.sg.android.bambooflower.ui.dialog.ReportDialog"
        android:label="ReportDialog"
        tools:layout="@layout/dialog_report"/>
    <fragment
        android:id="@+id/editDiaryFragment"
        android:name="com.sg.android.bambooflower.ui.fragment.EditDiaryFragment"
        android:label="EditDiaryFragment"
        tools:layout="@layout/fragment_add_diary"/>
    <fragment
        android:id="@+id/settingFragment"
        android:name="com.sg.android.bambooflower.ui.fragment.SettingFragment"
        android:label="SettingFragment"
        tools:layout="@layout/fragment_setting">
        <action
            android:id="@+id/action_settingFragment_to_signUpFragment"
            app:destination="@id/signUpFragment"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_right"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_settingFragment_to_deleteAccountFragment"
            app:destination="@id/deleteAccountFragment"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/fade_out"/>
    </fragment>
    <dialog
        android:id="@+id/acceptListDialog"
        android:name="com.sg.android.bambooflower.ui.dialog.AcceptListDialog"
        android:label="AcceptListDialog"
        tools:layout="@layout/dialog_accept_list"/>
    <fragment
        android:id="@+id/questListFragment"
        android:name="com.sg.android.bambooflower.ui.fragment.QuestListFragment"
        android:label="QuestListFragment"
        tools:layout="@layout/fragment_quest_list">
        <action
            android:id="@+id/action_questListFragment_to_questDialog"
            app:destination="@id/questDialog"/>
    </fragment>
    <fragment
        android:id="@+id/diaryListFragment"
        android:name="com.sg.android.bambooflower.ui.fragment.DiaryListFragment"
        android:label="DiaryListFragment"
        tools:layout="@layout/fragment_diary_list">
        <action
            android:id="@+id/action_diaryListFragment_to_addDiaryFragment"
            app:destination="@id/addDiaryFragment"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/fade_out"/>
        <action
            android:id="@+id/action_diaryListFragment_to_diaryFragment"
            app:destination="@id/diaryFragment"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/fade_out"/>
    </fragment>
    <dialog
        android:id="@+id/questDialog"
        android:name="com.sg.android.bambooflower.ui.dialog.QuestDialog"
        android:label="questDialog"
        tools:layout="@layout/dialog_quest">
        <action
            android:id="@+id/action_questDialog_to_addPostFragment"
            app:destination="@id/addPostFragment"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/fade_out"/>
    </dialog>
    <fragment
        android:id="@+id/resetPasswordFragment"
        android:name="com.sg.android.bambooflower.ui.fragment.ResetPasswordFragment"
        android:label="ResetPasswordFragment"
        tools:layout="@layout/fragment_reset_password"/>
    <fragment
        android:id="@+id/profileEditFragment"
        android:name="com.sg.android.bambooflower.ui.fragment.ProfileEditFragment"
        android:label="ProfileEditFragment"
        tools:layout="@layout/fragment_profile_edit"/>
    <fragment
        android:id="@+id/deleteAccountFragment"
        android:name="com.sg.android.bambooflower.ui.fragment.DeleteAccountFragment"
        android:label="DeleteAccountFragment"
        tools:layout="@layout/fragment_delete_account">
        <action
            android:id="@+id/action_deleteAccountFragment_to_signUpFragment"
            app:destination="@id/signUpFragment"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_right"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.sg.android.bambooflower.ui.fragment.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_selectFlowerDialog"
            app:destination="@id/selectFlowerDialog"/>
        <action
            android:id="@+id/action_homeFragment_to_questListFragment"
            app:destination="@id/questListFragment"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/fade_out"/>
        <action
            android:id="@+id/action_homeFragment_to_diaryListFragment"
            app:destination="@id/diaryListFragment"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/fade_out"/>
    </fragment>
    <dialog
        android:id="@+id/selectFlowerDialog"
        android:name="com.sg.android.bambooflower.ui.dialog.SelectFlowerDialog"
        android:label="SelectFlowerDialog"
        tools:layout="@layout/dialog_select_flower"/>
</navigation>